{% extends 'base.html.twig' %}
{% block body %}
<h3>{{data.nom}}</h3>
<img src='{{data.image}}'>
<p>{{data.shortDescription}}</p>

<ul>les types
    {% for type in data.gameTypes %}
        <li>{{type.name}}</li>
    {% endfor %}
</ul>
<p>partie de : {{data.duration}}</p>
<p>{{data.longDescription}}</p>
<ul>les auteurs
    {% for auteur in data.auteurs %}
            <li>{{auteur}}</li>
    {% endfor %}
</ul>
<ul>les dessinateurs
    {% for dessinateur in data.dessinateurs %}
            <li>{{dessinateur}}</li>
    {% endfor %}
</ul>
{# <ul>les thèmes
    {% for themes in data.getThemes %}
            <li>{{themes.name}}</li>
    {% endfor %}
</ul> #}
<p>de {{data.nbJoueursMin}} à {{data.nbJoueursMax}} joueurs </p>
<p>édité par => {{data.editeur}}</p>
<ul>les auteurs
    {% for auteur in data.auteurs %}
            <li>{{auteur.id}}</li>
    {% endfor %}
</ul>
<p>à partir de {{data.age}} ans</p>
{% endblock %}