    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ game.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ game.name }}</td>
            </tr>
            <tr>
                <th>Editeur</th>
                <td>{{ game.editeur }}</td>
            </tr>
            <tr>
                <th>Duration</th>
